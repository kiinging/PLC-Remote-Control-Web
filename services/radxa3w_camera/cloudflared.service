# File: /etc/systemd/system/cloudflared.service
# Cloudflare Tunnel for radxa3w-camera
[Unit]
Description=Cloudflare Tunnel
After=network.target camera_app.service
Wants=network.target

[Service]
User=radxa
TimeoutStartSec=0
Type=notify
ExecStart=/usr/bin/cloudflared \
  --config /home/radxa/.cloudflared/config.yml \
  --no-autoupdate \
  tunnel run radxa3w_camera

Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
