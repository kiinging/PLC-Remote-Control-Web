[Unit]
Description=Gateway API Service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/orangepi/PLC-Remote-Control-Web/services/opi4pro_gateway
ExecStart=/home/orangepi/PLC-Remote-Control-Web/services/opi4pro_gateway/venv/bin/python3 -u run_api.py
Restart=always
RestartSec=2
Environment=DB_PATH=/var/lib/opi4pro_gateway/gateway.db
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
